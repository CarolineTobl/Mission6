@{
}
@model Mission6.Models.Movies

@{
    ViewData["Title"] = "Edit Movie";
}

<section id="why-us" class="why-us">
    <div class="section-header">
        <h2>Edit Movie</h2>
    </div>
    <div class="container" data-aos="fade-up">

        <form asp-action="EditMovie" method="post">
            <input type="hidden" asp-for="MovieId" />

            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
                    <option value="">Please select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" type="number" min="1888" required />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Director">Director (optional)</label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating">Rating (optional)</label>
                <select asp-for="Rating" class="form-control">
                    <option value="">Select a rating</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Edited">Edited</label>
                <select asp-for="Edited" class="form-control" required>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LentTo">Lent to (optional)</label>
                <input asp-for="LentTo" class="form-control" />
                <span asp-validation-for="LentTo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CopiedToPlex">Copied to Plex</label>
                <select asp-for="CopiedToPlex" class="form-control" required>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes">Notes (optional)</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</section>
