@model List<Movies>
<br />
<br />
<br />
<br />
<br />
<br />
<h1 style="text-align: center;">Complete Movie List and Collection</h1>
<p style="text-align: center;"><a asp-controller="Home" asp-action="Movies">Add More Movies to the Database here.</a></p>

<div class="container">
    <table class="table table-bordered">

        <thead class="fw-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Copied To Plex</td>
                <td>Notes</td>
                <td>Delete Row?</td>
                <td>Edit Row?</td>
            </tr>
        </thead>

        @foreach (var x in Model)
        {
            <tbody>
                <tr>
                    <td>@x.Category.CategoryName</td> <!-- Accessing Category through the navigation property -->
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@(x.Edited ? "Yes" : "No")</td> <!-- Updated for clarity -->
                    <td>@x.LentTo</td>
                    <td>@(x.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@x.Notes</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@x.MovieId">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="EditMovie" asp-route-id="@x.MovieId" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>

</div>
